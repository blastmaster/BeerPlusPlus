#! /usr/bin/env perl

use strict;
use warnings;

use feature 'say';


use FindBin;
BEGIN { unshift @INC, "$FindBin::Bin/../lib" }


use BeerPlusPlus::Command;
use Getopt::Long qw(:config require_order);


GetOptions(help => sub { help and exit 0 });

my $action = shift or help and exit 1;
find $action and run or help and exit 1;

